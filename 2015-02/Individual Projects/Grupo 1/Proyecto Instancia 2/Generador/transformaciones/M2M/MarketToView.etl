model view driver EMF {path='presentacion.ecore'};
model mp driver EMF {path='proyectos.ecore'};

rule Market2Design
transform m:mp!MarketPlace
to v:view!Design{
v.name=m.nombre;
m.paginas.equivalent().println();

v.views=m.paginas.equivalent();

}

rule Promocion2View
transform m:mp!Promocion
to v:view!Layout{


v.name=m.nombre;
v.page=m.estilo.name;

v.tipoPagina=m.eClass().name;
v.setDesignPromo(m);
v.name.println();
v.tipo.println();
}
rule Catalogo2View
transform m:mp!Catalogo
to v:view!Layout{

v.name=m.nombre;
v.page=m.estilo.name;
v.tipoPagina=m.eClass().name;
v.setDesignCatalogo(m);
v.name.println();
}

rule Contacto2View
