operation view!Layout setLayout(rows:Integer,col:Integer){
	var r=0;
	var c;
	
	while(r<rows){
		c=0;
		self.filas.add(new view!Row);
		while(c<col){
			self.filas.last().columnas.add(new view!Column);
			c=c+1;
			}
			r=r+1;
			}

}